---
export type Props = {
	title: string;
	keywords: string[];
	summary: string;
	url: string;
};
const props = Astro.props as Props;
// the Astro.url return the whole url e.g ( https://www.tgif.teknologiumum.com/chat/database-isolation-level ), We're just need the origin url e.g (https://www.tgif.teknologiumum.com/)
const thumbnail: string = Astro.site + "thumbnail.png"
---

<meta charset="utf-8" />
<link rel="icon" type="image/svg+xml" href="/favicon.png" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />
<meta name="language" content="id-ID" />
<meta name="robots" content="index,follow" />
<meta name="keywords" content={props.keywords.join(", ")} />
<meta name="summary" content={props.summary} />

<meta property="og:title" content={props.title} />
<meta property="og:type" content="website" />
<meta property="og:url" content={props.url} />
<meta property="og:image" content={thumbnail} />
<meta property="og:image:secure:url" content={thumbnail} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content={props.url} />
<meta name="twitter:title" content={props.title} />
<meta name="twitter:description" content={props.summary} />
<meta name="twitter:image" content={thumbnail} />

<title>{props.title} | TGIF</title>
