---
type Props = {
	name: string;
	topic: string;
};

const { name, topic } = Astro.props as Props;
---

<div class="chat-card">
	<div class="hook">
		<div class="hook-hole"></div>
	</div>
	<div class="profile-image">
		<img
			alt={name}
			src={`https://api.dicebear.com/5.x/adventurer/svg?seed=${name}&backgroundColor=b6e3f4,c0aede,d1d4f9&scale=80`}
		/>
	</div>
	<span class="name">{name}</span>
	<p class="topic">{topic}</p>
</div>

<style lang="scss">
	@use "../styles/variables.scss";

	.chat-card {
		display: grid;
		border: 0.2rem variables.$black solid;
		border-radius: 2rem;
		padding: 2rem 1rem;
		display: grid;
		grid-template-columns: 1.5rem 6rem 1fr;
		grid-template-rows: 2.5rem 4rem;
		column-gap: 1rem;
		box-shadow: 0.4rem 0.4rem 0 0 variables.$pink, 0.4rem 0.4rem 0 0.2rem variables.$black;
		cursor: pointer;
	}

	.profile-image {
		grid-column: 2/3;
		grid-row: 1/3;
		display: flex;
		align-items: center;
		justify-content: center;

		img {
			width: 5rem;
			height: 5rem;
			border-radius: 999rem;
			overflow: hidden;
		}
	}

	.hook {
		grid-column: 1/2;
		grid-row: 1/3;
		display: flex;
		align-items: center;
		justify-content: center;

		&-hole {
			position: relative;
			width: 1.5rem;
			height: 1.5rem;
			border-radius: 99rem;
			background-color: variables.$black;

			&::before {
				content: "";
				position: absolute;
				background-color: variables.$white;
				width: 3rem;
				height: 0.5rem;
				border: 0.2rem variables.$black solid;
				border-radius: 1rem;
				right: 25%;
				top: 50%;
				transform: translateY(-50%);
			}
		}
	}

	.name {
		grid-column: 3/4;
		grid-row: 1/2;
		font-family: "Unbounded", sans-serif;
		font-weight: 600;
		color: variables.$black;
	}

	.topic {
		color: rgba($color: variables.$black, $alpha: 0.8);
		font-family: "Unbounded", sans-serif;
		font-weight: 400;
		font-size: 1.25rem;
		line-height: 1.75em;
	}
</style>
